{
  "name": "vibe-logistics-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "vue-cli-service lint",
    "dev": "yarn lint && vite",
    "dev:mock": "yarn lint && cross-env USE_MOCK=true vite",
    "build:beta": "yarn lint && vite build --mode development",
    "build:prod": "yarn lint && cross-env vite build --mode production",
    "build:mock": "yarn lint && cross-env USE_MOCK=true vite build --mode production",
    "serve": "yarn build:mock && vite preview"
  },
  "dependencies": {
    "axios": "^0.25.0",
    "core-js": "^3.21.0",
    "element-plus": "^2.0.1",
    "file-saver": "^2.0.5",
    "lodash": "^4.17.21",
    "mockjs": "^1.1.0",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.9",
    "vue": "^3.2.30",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2",
    "xlsx": "^0.17.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.1.0",
    "@vue/cli-plugin-babel": "~4.5.15",
    "@vue/cli-plugin-eslint": "~4.5.15",
    "@vue/cli-plugin-router": "~4.5.15",
    "@vue/cli-plugin-vuex": "~4.5.15",
    "@vue/cli-service": "^4.5.15",
    "@vue/compiler-sfc": "^3.2.30",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.x",
    "eslint-plugin-vue": "^8.4.1",
    "rollup-plugin-visualizer": "^5.5.4",
    "sass": "^1.49.7",
    "sass-loader": "^12.4.0",
    "unplugin-auto-import": "^0.5.11",
    "unplugin-vue-components": "^0.17.17",
    "vite": "^2.7.13",
    "vite-plugin-mock": "^2.9.6",
    "vite-plugin-style-import": "^1.4.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "vue/multi-word-component-names": 0,
      "vue/no-deprecated-router-link-tag-prop": 0,
      "jsx-quotes": 2,
      "arrow-parens": 0,
      "generator-star-spacing": 0,
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "indent": [
        "error",
        2
      ],
      "space-before-function-paren": 0,
      "eol-last": 1,
      "eqeqeq": 2,
      "no-undef": 0,
      "no-unused-vars": "off",
      "no-useless-escape": "off",
      "max-len": [
        "error",
        800,
        4,
        {
          "ignoreUrls": true,
          "ignorePattern": "<path.*"
        }
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "all",
          "ignoreReadBeforeAssign": false
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
