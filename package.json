{
  "name": "vibe-logistics-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "vue-cli-service lint",
    "dev": "npm run lint && vite",
    "dev:mock": "npm run lint && cross-env USE_MOCK=true vite",
    "build:beta": "npm run lint && vite build --mode development",
    "build:prod": "npm run lint && cross-env vite build --mode production",
    "build:mock": "npm run lint && cross-env USE_MOCK=true vite build --mode development",
    "serve": "npm run build:mock && vite preview"
  },
  "dependencies": {
    "axios": "^0.22.0",
    "core-js": "^3.6.5",
    "element-plus": "^1.1.0-beta.20",
    "file-saver": "^2.0.5",
    "lodash": "^4.17.21",
    "mockjs": "^1.1.0",
    "nprogress": "^0.2.0",
    "vue": "^3.2.4",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0",
    "xlsx": "^0.17.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.9.3",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "^4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.0",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "unplugin-vue-components": "^0.17.2",
    "vite": "^2.5.10",
    "vite-plugin-mock": "^2.9.6"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "jsx-quotes": [
        "warn",
        "prefer-single"
      ],
      "arrow-parens": 0,
      "generator-star-spacing": 0,
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "indent": [
        "error",
        2
      ],
      "space-before-function-paren": 0,
      "eol-last": 0,
      "no-unused-vars": "off",
      "no-useless-escape": "off",
      "max-len": [
        "error",
        800,
        4,
        {
          "ignoreUrls": true,
          "ignorePattern": "<path.*"
        }
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "all",
          "ignoreReadBeforeAssign": false
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
